---
import type { HTMLAttributes } from 'astro/types';

export type Props = HTMLAttributes<'a'>;

const { href, ...rest } = Astro.props;
---

<a
	{...rest}
	href={href}
	class="block border-b border-transparent p-1 text-base uppercase text-gray-500 no-underline hover:border-blue-600 hover:text-blue-600 focus:text-blue-600 dark:text-blue-100 dark:hover:border-sky-400 dark:hover:text-sky-400 dark:focus:text-sky-400"
>
	<slot />
</a>
