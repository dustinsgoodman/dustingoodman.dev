---
import { getCurrentRoute, getSidebarNav } from '../navData/util';

export interface Props {
  currentPage: string;
}

const { currentPage } = Astro.props as Props;
const navPaths = getSidebarNav(currentPage);
// const activeRoute = getCurrentRoute(navPaths, currentPage);
---

<nav class="w-full h-full" aria-label="Learn Navigation">
  <ul class="max-h-full overflow-x-visible overflow-y-auto">
    {navPaths.map(({ path, title, routes }) => {
      return (
        <a href={path}>{title}</a>
        <ul>
          {routes.map(({ title: subRouteTitle, path: subRoutePath }) => (
            <li>
              <a href={subRoutePath}>{subRouteTitle}</a>
            </li>
          ))}
        </ul>
      );
    })}
  </ul>
</nav>
