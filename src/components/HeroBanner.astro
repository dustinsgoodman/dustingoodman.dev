---
import { Image } from 'astro:assets';
import headshotImg from '@/images/assets/headshot.jpg';
import { socialLinks } from '@/utils/constants';
---

<section class="container w-full py-8 mx-auto">
  <div class="grid gap-6 lg:grid-cols-2 lg:gap-12">
		<Image
			class="mx-auto aspect-square overflow-hidden rounded-xl object-cover w-4/5 lg:order-last"
			src={headshotImg}
			alt="Dustin Goodman Headshot"
			width="550"
			height="550"
		/>
    <div class="flex flex-col justify-center space-y-4 px-4">
      <div class="space-y-2">
        <h1 class="text-3xl text-center md:text-left font-bold tracking-tighter sm:text-5xl xl:text-6xl/none">
          Hello, I'm<br>
					<span class="italic decoration-blue-900 decoration-wavy decoration-1 underline-offset-4 dark:decoration-sky-200">Dustin Goodman</span>
        </h1>
      </div>
      <div class="flex flex-row gap-x-4 gap-y-2 justify-center md:justify-start">
				{
					socialLinks.map(({ href, label, icon: Icon }) => (
						<a
							href={href}
							target="_blank"
							rel="noopener noreferrer"
							aria-label={label}
							class="inline-flex items-center justify-center rounded-full bg-blue-600 p-2 text-3xl text-white hover:bg-blue-900 hover:text-slate-100 dark:bg-white dark:text-blue-900 dark:hover:bg-slate-300 dark:hover:text-blue-700 shadow transition-colors"
						>
							<Icon />
						</a>
					))
				}
      </div>
    </div>
  </div>
</section>
