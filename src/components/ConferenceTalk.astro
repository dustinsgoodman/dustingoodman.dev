---
import { ConferenceTalk } from '@/types';
import { PDFViewer } from '@/components/PDFViewer';

export interface Props {
	conferenceTalk: ConferenceTalk;
}

const { conferenceTalk } = Astro.props;
const { title, description, cospeakers, slides, appearances } = conferenceTalk;
const slidesUrl = `${Astro.url.origin}${slides}`;
---

<article class="bg-white dark:bg-gray-600 mx-4 lg:mx-48">
	<h1 class="text-4xl text-center mb-2">{title}</h1>
	{
		cospeakers.length > 0 && (
			<div class="mb-4 flex flex-wrap content-evenly items-center justify-center gap-2">
				Co-Speaker(s):{' '}
				{cospeakers?.map((cospeaker) => (
					<a
						href={`https://twitter.com/${cospeaker.twitter}`}
						class="mx-1 inline-block px-3 py-1 text-sm font-semibold text-gray-700"
						target="_blank"
						rel="noopener noreferrer"
					>
						<img
							src={cospeaker.profilePic}
							alt={`${cospeaker.name} Profile Picture`}
							class="inline-block w-8 rounded-full"
						/>
						{cospeaker.name}
					</a>
				))}
			</div>
		)
	}
	<PDFViewer file={slidesUrl} client:load />
	<p class="block text-lg text-gray-600 dark:text-gray-100 mb-2">
		{description}
	</p>

	<hr
		class="border-0 h-px bg-gradient-to-r from-gray-100 via-gray-700 to-gray-100 dark:from-gray-600 dark:via-gray-100 dark:to-gray-600"
	/>
	<div class="px-4 py-8">
		<slot />
	</div>
</article>
