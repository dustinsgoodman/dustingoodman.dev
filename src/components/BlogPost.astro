---
import { BlogPost } from '@/types';

export interface Props {
  post: BlogPost;
}

const { post } = Astro.props;
const { title, publishDate, heroImage, alt, tags } = post;
---

<article class="bg-gray-100 dark:bg-gray-600 mx-8 md:mx-48">
  {heroImage && (
    <img
      class="object-cover w-full max-h-[420px]"
      loading="lazy"
      src={heroImage}
      alt={alt}
    />
  )}
  <h1 class="text-4xl text-center mb-2">{title}</h1>
  <p class="text-lg text-gray-600 dark:text-gray-100 text-center mb-2">
    {publishDate}
  </p>
  <div class="flex justify-center content-evenly mb-4">
    {tags?.map((tag) => (
      <span class="inline-block bg-blue-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mx-1">
        {tag}
      </span>
    ))}
  </div>
  <hr
    class="border-0 h-px bg-gradient-to-r from-gray-100 via-gray-700 to-gray-100 dark:from-gray-600 dark:via-gray-100 dark:to-gray-600"
  />
  <div class="p-8">
    <slot />
  </div>
</article>
