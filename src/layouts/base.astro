---
import cn from 'classnames';
import Head from '@/components/Head.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';

export interface Props {
  title: string;
  description: string;
  enableWrapper?: boolean;
  enableVerticalPadding?: boolean;
}

const {
  title,
  description,
  enableWrapper = true,
  enableVerticalPadding = true,
} = Astro.props;
---

<html lang="en">
  <head>
    <Head {title} {description} />
  </head>
  <body class="text-gray-900 dark:text-white bg-gray-200 dark:bg-gray-700">
    <Header />
    <main
      class={cn({
        'container mx-auto': enableWrapper,
        'py-4 md:py-8': enableVerticalPadding,
      })}
    >
      <slot />
    </main>
    <Footer />
  </body>
</html>
