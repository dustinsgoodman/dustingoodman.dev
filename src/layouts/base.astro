---
import cn from 'classnames';
import MainHead from '../components/MainHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { title, description, enableWrapper = true } = Astro.props;
---
<html lang="en">
  <head>
    <MainHead title={title} description={description} />
  </head>
  <body class="text-gray-900 dark:text-white bg-white dark:bg-gray-800">
    <Header />
    <main class={cn({
      "container mx-auto": enableWrapper,
    })}>
      <slot />
    </main>
    <Footer />
  </body>
</html>
