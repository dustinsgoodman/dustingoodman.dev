---
import { getCollection } from 'astro:content';
import Layout from '@/layouts/base.astro';
import BlogPostPreview from '@/components/BlogPostPreview.astro';

const allPosts = await getCollection('blog', (post) => {
	if (import.meta.env.MODE === 'production') {
		return post.data.draft !== true && !post.data.redirectUrl;
	}

	return !post.data.redirectUrl;
});
const posts = allPosts.sort(
	(a, b) =>
		new Date(b.data.publishDate).valueOf() -
		new Date(a.data.publishDate).valueOf()
);
---

<Layout
	title="Blog | Dustin Goodman"
	description="Learn from Dustin Goodman's blog"
>
	<section
		class="container mx-auto flex max-w-5xl flex-col bg-blue-100 dark:bg-slate-900"
	>
		<div
			class="grid grid-cols-1 gap-4 gap-y-6 px-4 sm:grid-cols-2 md:grid-cols-3"
		>
			{posts.map((post) => <BlogPostPreview post={post} />)}
		</div>
	</section>
</Layout>
